# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.svg]
insert_final_newline = false

[COMMIT_EDITMSG]
max_line_length = 70